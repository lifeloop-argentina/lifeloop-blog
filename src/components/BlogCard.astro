---
interface Props {
  title: string;
  description: string;
  date: Date;
  image: string;
  imageAlt?: string;
  tags: string[];
  category?: string;
  readingTime: number;
  slug: string;
}

const { title, description, date, image, imageAlt, tags, category, readingTime, slug } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const imageSrc = image.startsWith('/') && !image.startsWith(base) ? `${base}${image}` : image;

const formattedDate = date.toLocaleDateString('es-AR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group">
  <a href={`/blog/${slug}/`} class="block">
    <div class="aspect-[16/9] overflow-hidden rounded-xl bg-ll-dark mb-5">
      <img
        src={imageSrc}
        alt={imageAlt || title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-[1.03]"
        loading="lazy"
      />
    </div>
    <div class="flex items-center gap-3 mb-3">
      {category && (
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-[11px] font-500 uppercase tracking-widest bg-ll-gold/10 text-ll-gold border border-ll-gold/20">
          {category}
        </span>
      )}
      <span class="text-[11px] text-white/35 font-300">{formattedDate}</span>
    </div>
    <h3 class="text-xl font-800 tracking-tight leading-snug text-white group-hover:text-ll-gold transition-colors duration-200 mb-2">
      {title}
    </h3>
    <p class="text-sm font-300 text-white/45 leading-relaxed line-clamp-3">
      {description}
    </p>
  </a>
</article>
