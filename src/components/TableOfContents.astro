---
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;
const filteredHeadings = headings.filter(h => h.depth >= 2 && h.depth <= 3);
---

{filteredHeadings.length > 0 && (
  <nav class="hidden lg:block sticky top-24" aria-label="Tabla de contenidos">
    <h4 class="text-[11px] font-inter font-600 uppercase tracking-widest text-white/30 mb-4">
      En este art√≠culo
    </h4>
    <ul class="flex flex-col gap-2 border-l border-white/10 pl-4">
      {filteredHeadings.map(h => (
        <li>
          <a
            href={`#${h.slug}`}
            class:list={[
              "text-sm font-inter transition-colors hover:text-ll-gold",
              h.depth === 2 ? "font-400 text-white/50" : "font-300 text-white/30 pl-3",
            ]}
          >
            {h.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
